<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Federal Police Feedback System</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="w-100">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12 px-0 shadow-lg">
            <a href="/">
              <img
                class="img-fluid mx-auto"
                src="/img/fedlogo.jpg"
                alt="website logo"
              />
            </a>
          </div>
        </div>
      </div>
    </header>
    <!-- sidebar -->
    <button
      class="btn ms-5"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasScrolling"
      aria-controls="offcanvasScrolling"
    >
      <i
        style="font-size: 35px; color: #fff"
        class="bi bi-arrow-right-square-fill"
      ></i>
    </button>
    <div class="side-bar">
      <div
        class="offcanvas offcanvas-start offcanvas-custom p-0"
        data-bs-scroll="true"
        data-bs-backdrop="false"
        tabindex="-1"
        id="offcanvasScrolling"
        aria-labelledby="offcanvasScrollingLabel"
      >
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Menu</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="offcanvas"
            aria-label="Close"
          ></button>
        </div>
        <div class="offcanvas-body">
          <ul class="list-unstyled w-100 d-flex flex-column gap-3">
            <li class="btn btn-primary">
              <a class="text-decoration-none text-white" href="/admin/overview"
                >Overview</a
              >
            </li>
            <li class="btn btn-primary">
              <a class="text-decoration-none text-white" href="/admin/register"
                >Create User</a
              >
            </li>
            <li class="btn btn-primary">
              <a class="text-decoration-none text-white active" href="/admin/add-product"
                >Add Product</a
              >
            </li>
            <li class="btn btn-primary">
              <a class="text-decoration-none text-white active" href="/admin/manage-product"
                >Mangage Product</a
              >
            </li>
            <li class="btn btn-danger">
              <a class="text-decoration-none text-white" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Sidebar ends -->

    <section class="container my-3 text-white">
      <h2 class="text-center display-6">Create User</h2>
      <div class="row justify-content-center">
        <form action="/admin/register" method="POST" class="col-7 mx-auto">
          <% if (errMessage !== null) { %>
          <div class="alert bg-danger mb-2 p-1"><%= errMessage %></div>
          <% } %> <% if (createdUser !== null) { %>
          <div class="alert bg-info mb-2 p-1 fed-text-color-dark">
            username: <%= createdUser.username %>
          </div>
          <div class="alert bg-info fed-text-color-dark mb-2 p-1">
            password: <%= createdUser.password %>
          </div>
          <% } %>

          <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input
              name="name"
              type="text"
              class="form-control"
              id="name"
              placeholder="Name"
            />
          </div>
          <div class="mb-3">
            <label for="username" class="form-label">Username:</label>
            <input
              name="username"
              type="text"
              class="form-control"
              id="username"
              placeholder="Username"
            />
          </div>

          <div class="row">
            <div class="mb-3 col-6">
              <label for="depPass" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="depPass"
                placeholder="Password"
                name="password"
              />
            </div>
            <div class="mb-3 col-6">
              <label for="confirmPassword" class="form-label"
                >Comfirm Password:</label
              >
              <input
                type="password"
                class="form-control"
                id="depConfPassword"
                placeholder="Confirm password"
                name="confirmPassword"
              />
            </div>
          </div>
          <button type="submit" class="btn btn-lg btn-primary">Submit</button>
        </form>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
